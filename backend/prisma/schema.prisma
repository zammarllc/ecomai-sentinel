generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
enum Tier {
  FREE
  PRO
  ENTERPRISE
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String
  tier         Tier     @default(FREE)
  queries      Query[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Query {
  id         String     @id @default(uuid())
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  prompt     String
  variables  Json
  result     Json
  forecasts  Forecast[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([userId])
}

model Forecast {
  id          String   @id @default(uuid())
  query       Query    @relation(fields: [queryId], references: [id], onDelete: Cascade)
  queryId     String
  summary     String
  projections Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([queryId])
}
