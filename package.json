{
  "name": "ecomai-sentinel",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "postinstall": "cd backend && npx prisma generate"
  ],
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^4.60.0",
    "zod": "^3.23.8",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prisma": "^5.20.0"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
